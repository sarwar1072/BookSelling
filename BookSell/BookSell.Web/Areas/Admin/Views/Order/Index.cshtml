@model OrderDetailModel

@section PageStyles
{
    <!-- DataTables -->
    <link rel="stylesheet" href="/admin/plugins/datatables-bs4/css/dataTables.bootstrap4.css">
}

<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Product  List </h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-primary" asp-action="AddProduct"><i class="fas fa-plus"></i> &nbsp; Create New Product</a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table id="orderId" class="table table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr class="table-info">
                            <th>Id</th>
                            <th>Name</th>
                            <th>Phone Number</th>

                            <th>Order Status</th>
                            <th>Amount</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tfoot>
                        <tr class="table-info">
                            <th>Id</th>
                            <th>Name</th>
                            <th>Phone Number</th>

                            <th>Order Status</th>
                            <th>Amount</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->
<!-- /.modal -->
@section PageScripts{

    <!-- DataTables -->
    <script src="/admin/plugins/datatables/jquery.dataTables.js"></script>
    <script src="/admin/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
    <!-- page script -->

    <script>
        $(function () {
            $("#orderId").DataTable({
                "processing": true,
                "serverSide": true,
                "ajax": "/Admin/Order/GetOrder"
            });
        });
    </script>

}